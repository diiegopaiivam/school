<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Perguntas</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<%= link_to new_admins_backoffice_question_path, :class => "btn btn-success" do %>
    <i class="fa fa-plus"></i> Nova Pergunta
<% end %>
<br></br>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Descrição</th>
                <th>Assunto</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% @questions.each do |question| %>
                <tr>
                    <td><%= question.id %></td>
                    <td><%= question.description.truncate(70) %></td>
                    <td><%= question.subject.description.truncate(50) %></td>
                    <td style="width:100px;">
                        <%= link_to edit_admins_backoffice_question_path(question), :class => "btn btn-primary btn-circle" do %>
                            <i class="fa fa-edit"></i>
                        <% end %>

                        <%= link_to admins_backoffice_question_path(question), method: :delete, :class => "btn btn-danger btn-circle",  data: { confirm: "Deseja realmente excluír pergunta" } do %>
                            <i class="fa fa-trash"></i>
                        <% end %>

                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <div class="text-center">
        <%= paginate @questions %>
    </div>
</div>