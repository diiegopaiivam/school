<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Dados Cadastrais</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
        <% if @profile.errors.any? %>
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                
                <ul>
                <% @profile.errors.full_messages.each do |message| %>
                    <li> <%= message %> </li>
                <% end %>
                </ul>
            </div>
        <% end %>
        <%= form_with(url: profiles__backoffice_profile_path, model: @profile , local: true, class:"form-horizontal form-label-left",  novalidate:"") do |form| %>
            <div class="item form-group">
                <%= form.label :first_name, class:"col-form-label col-md-3 col-sm-3 label-align" %>
                <div class="col-md-6 col-sm-6 ">
                    <%= form.text_field :first_name, class:"form-control", required:"required" %>
                </div>
            </div>
            <div class="item form-group">
                <%= form.label :last_name, class:"col-form-label col-md-3 col-sm-3 label-align" %>
                <div class="col-md-6 col-sm-6 ">
                    <%= form.text_field :last_name, class:"form-control", required:"required" %>
                </div>
            </div>
            <div class="item form-group">
                <%= form.label :email, class:"col-form-label col-md-3 col-sm-3 label-align" %>
                <div class="col-md-6 col-sm-6 ">
                    <%= form.text_field :email, class:"form-control", required:"required", readonly: true %>
                </div>
            </div>

            <%= form.fields_for :profile_user do |profile_form| %>
                <div class="item form-group">
                    <%= profile_form.label :address, class:"col-form-label col-md-3 col-sm-3 label-align" %>
                    <div class="col-md-6 col-sm-6 ">
                        <%= profile_form.text_field :address, class:"form-control", required:"required" %>
                    </div>
                </div>
                <div class="item form-group">
                    <%= profile_form.label :gender, class:"col-form-label col-md-3 col-sm-3 col-xs-12 label-align" %>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div id="gender" class="btn-group" data-toggle="buttons">
                        <label class="btn <%= gender_select(@profile, 'M') %>" data-toggle-class="btn-primary" data-toggle-passive-class="btn-default">
                            <%= profile_form.radio_button :gender, "M", "data-parsley-multiple":"gender"%> &nbsp; Masculino &nbsp;
                        </label>
                        <label class="btn <%= gender_select(@profile, 'F') %>" data-toggle-class="btn-primary" data-toggle-passive-class="btn-default">
                            <%= profile_form.radio_button :gender, "F", "data-parsley-multiple":"gender"%> &nbsp; Feminino &nbsp;
                        </label>
                        </div>
                    </div>
                </div>

                <%= javascript_tag do %>
                    var labels = document.querySelectorAll('div#gender label');

                    labels.forEach((label) => {
                        label.addEventListener('click', () => {
                        label.classList.remove('btn-default');
                        label.classList.add('btn-primary');

                        labels.forEach((lbl) => {
                            if(lbl !== label){
                                lbl.classList.remove('btn-primary');
                                lbl.classList.add('btn-default');
                            };
                        });
                        });
                    });
                <% end %>
                <div class="item form-group">
                    <%= profile_form.label :birthdate, class:"col-form-label col-md-3 col-sm-3 label-align" %>
                    <div class="col-md-6 col-sm-6 ">
                        <%= profile_form.text_field :birthdate, class:"form-control", required:"required" %>
                    </div>
                </div>
            <% end %>

            <div class="item form-group">
                <%= form.label :password, class:"col-form-label col-md-3 col-sm-3 label-align" %>
                <div class="ol-md-6 col-sm-6">
                    <%= form.password_field :password, 
                            class:"form-control" %>
                </div>
            </div>

            <div class="item form-group">
                <%= form.label :password_confirmation, class:"col-form-label col-md-3 col-sm-3 label-align" %>
                <div class="col-md-6 col-sm-6">
                    <%= form.password_field :password_confirmation, 
                            class:"form-control" %>
                </div>
            </div>
                            
            <div class="ln_solid"></div>
            <div class="item form-group">
                <div class="col-md-6 col-sm-6 offset-md-3">
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>
            </div>

        <% end %>
        </div>
    </div>
</div>